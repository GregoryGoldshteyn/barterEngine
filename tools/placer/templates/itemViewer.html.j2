{% extends "base.html.j2" %}
{% block head %}
{{ super() }}
<title>Item Viewer</title>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="container">
        <h1>Item Viewer</h1>
        <div class="row">
            <div class="col-xl">
                <h2>Item Id: {{ item._id }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xl">
                <h2>Item Name: {{ item.name }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                <h2>Short Description</h2>
                <p id="short_desc"></p>
            </div>
            <div class="col-md">
                <h2>Long Description</h2>
                <p id="long_desc"></p>
            </div>
            <div class="col-md">
                <h2>Images</h2>
                <img id="image_icon" />
                <img id="image_small" />
                <img id="image_large" />
            </div>
        </div>
    </div>
</div>
{{ super() }}
{% endblock %}