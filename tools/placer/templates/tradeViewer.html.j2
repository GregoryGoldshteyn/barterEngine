{% extends "base.html.j2" %}
{% block head %}
{{ super() }}
<title>Trade Viewer</title>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="container">
        <h1>Trade Viewer</h1>
        <div class="row">
            <div class="col-xl">
                <h2>Trade Id: {{ trade._id }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xl">
                <h2>Trade Name: {{ trade.name }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                <h2>Short Description</h2>
                <p id="short_desc"></p>
            </div>
            <div class="col-md">
                <h2>Items in</h2>
                <p id="items_in">{{ trade.items_in }}</p>
            </div>
            <div class="col-md">
                <h2>Items out</h2>
                <p id="items_out">{{ trade.items_out }}</p>
            </div>
        </div>
    </div>
</div>
{{ super() }}
{% endblock %}